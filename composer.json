{
    "config": {
        "vendor-dir": "app/vendor"
    },

    "require": {
        "php": ">=7.0.0",
        "smarty/smarty": "dev-trunk",
        "guzzlehttp/guzzle": "^6.2",
        "gettext/gettext": "^4.4"
    },

    "autoload": {
        "psr-4": {
            "Controllers\\" : "app/controllers/",
            "Models\\"      : "app/models/",
            "Views\\"       : "app/views/",
            "Lib\\"         : "app/lib/"
        },
        "files": [
            "app/include/functions.php",
            "app/include/variables.php",
            "app/include/router.php"
        ]
    }
}
